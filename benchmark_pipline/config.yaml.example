# 配置文件示例
# 复制此文件为 config.yaml 并填写你的配置

api:
  api_key: "your-api-key-here"  # 你的API密钥
  base_url: "https://api.openai.com/v1"  # API base URL
  model_id: "gpt-4"  # 使用的模型ID
  temperature: 0.3  # 温度参数（0-1）
  max_tokens: 2000  # 最大token数
  max_retries: 3  # 最大重试次数

benchmark:
  # 运行的数据集split
  # 选项: "all" 或指定单个split名称
  # 可选的split名称:
  #   - Mao_Zedong_Thought
  #   - Principles_of_Marxism
  #   - Outline_of_Modern_and_Contemporary_Chinese_History
  #   - Ideological_Morality_and_Legal_System
  #   - An_Introduction_to_Xi_Jinping_Thought_on_Socialism_with_Chinese_Characteristics_for_a_New_Era
  splits: "all"  # 或指定单个split，例如: "Mao_Zedong_Thought"

  # 每个split最多运行的问题数量
  # 设置为 null 或 -1 表示运行所有问题
  max_questions_per_split: null  # 例如: 100 表示每个split最多运行100个问题

  # 是否生成可视化图表
  enable_visualization: true  # true: 生成可视化图表, false: 不生成

judge_evaluation:
  workers: 4  # 并行worker数量（可选，命令行参数优先）
  detailed_reasoning: true  # 是否输出详细的评分理由
  output:
    format: "csv"  # 输出格式：csv 或 json
    directory: "evaluation_results"  # 输出目录（相对路径）

logging:
  level: "INFO"  # 日志级别：DEBUG, INFO, WARNING, ERROR
  save_to_file: true  # 是否保存日志到文件
  log_file: "logs/benchmark.log"  # 日志文件路径
